	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>
    
	<definition name="blank/*" template="/views/blank/layout.jsp">
		<put-attribute name="body" value="/views/blank/{1}.jsp" />
	</definition>
	
	<definition name="admin/*" template="/views/admin/layout.jsp">
		<put-attribute name="body" value="/views/admin/{1}.jsp" />
	</definition>
	 
